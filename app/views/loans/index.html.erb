<h1>Your Loans</h1>

<table>
  <thead>
    <tr>
      <th>Amount</th>
      <th>Interest Rate</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @loans.each do |loan| %>
      <tr>
        <td><%= loan.amount %></td>
        <td><%= loan.interest_rate %>%</td>
        <td><%= loan.state %></td>
        <td><%= link_to 'Show', loan %></td>
        <% if loan.state == 'requested' %>
          <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Loan', new_loan_path %>
